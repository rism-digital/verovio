<mei xmlns="http://www.music-encoding.org/ns/mei" meiversion="3.0.0">
    <meiHead>
        <fileDesc>
            <titleStmt>
                <title>Chords: Alignment and justification</title>
            </titleStmt>
            <pubStmt>
                <date>2017-04-18</date>
            </pubStmt>
            <notesStmt>
                <annot>Verovio offers options to align the element "harm" representing a chord symbol in relation to the "tstamp" attribute.</annot>
            </notesStmt>
        </fileDesc>
        <encodingDesc>
            <appInfo>
                <application version="0.9.13">
                    <name>Verovio</name>
                </application>
            </appInfo>
        </encodingDesc>
        <workDesc>
            <work>
                <titleStmt>
                    <title />
                </titleStmt>
            </work>
        </workDesc>
    </meiHead>
    <music>
        <body>
            <mdiv>
                <score>
                    <scoreDef>
                        <staffGrp>
                            <staffDef n="1" clef.shape="G" clef.line="2" lines="5"/>
                        </staffGrp>
                    </scoreDef>
                    <section>
                        <measure n="1">
                            <staff n="1">
                                <layer n="1">
                                    <note dur="2" pname="f" oct="4"/>
                                    <note dur="2" pname="f" oct="4"/>
                                    <note dur="2" pname="f" oct="4"/>
                                </layer>
                            </staff>
                            <harm tstamp="1">
                                <rend halign="right">Right</rend>
                            </harm>
                            <harm tstamp="3">
                                <rend halign="center">Cent.</rend>
                            </harm>
                            <harm tstamp="5">
                                <rend halign="left">Left</rend>
                            </harm>
                        </measure>
                    </section>
                </score>
            </mdiv>
        </body>
    </music>
</mei>